<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.alcatel_lucent.dms.model" schema="dms" default-cascade="all">
	<class name="Dictionary" table="DICTIONARY">
		<id column="ID" name="id">
			<generator class="native" />
		</id>

		<property name="name" type="string" column="NAME" not-null="true" unique="true"/>
		<property name="format" type="string" column="FORMAT" length="20" />
		<property name="encoding" type="string" column="ENCODING" length="20" />
		<property name="path" type="string" column="PATH" />
		
		<many-to-one name="application" column="APPLICATION_ID" not-null="true"/>
		
		<set name="dictLanguages" cascade="all" inverse="true">
			<key column="DICTIONARY_ID"/>
			<one-to-many class="DictionaryLanguage"/>
		</set>
		
		<set name="labels" cascade="all" inverse="true">
			<key column="DICTIONARY_ID"/>
			<one-to-many class="Label"/>
		</set>
		
		<property name="locked" type="boolean" column="LOCKED"/>
		
	</class>

</hibernate-mapping>