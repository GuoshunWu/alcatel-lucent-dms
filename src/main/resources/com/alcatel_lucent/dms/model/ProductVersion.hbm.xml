<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.alcatel_lucent.dms.model">
	<class name="ProductVersion" table="PRODUCT_VERSION">
		<id column="ID" name="id">
			<generator class="native" />
		</id>

		<property name="name" type="string" column="NAME" not-null="true" />
		<many-to-one name="product" column="PRODUCT_ID" not-null="true" />

		<set name="applications" cascade="delete" inverse="true">
			<key column="PRODUCT_VERSION_ID" />
			<one-to-many class="Application" />
		</set>
	</class>
</hibernate-mapping>
