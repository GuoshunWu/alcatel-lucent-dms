<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.alcatel_lucent.dms.model">
	<class name="com.alcatel_lucent.dms.model.Product" table="PRODUCT">
		<id column="ID" name="id">
			<generator class="native" />
		</id>

        <property name="version" type="string" column="VERSION" />

		<many-to-one name="base" column="PRODUCT_BASE_ID"/>

		<set name="applications" inverse="true">
			<key column="PRODUCT_ID" on-delete="cascade" not-null="true" />
			<one-to-many class="Application" />
		</set>

	</class>
</hibernate-mapping>
