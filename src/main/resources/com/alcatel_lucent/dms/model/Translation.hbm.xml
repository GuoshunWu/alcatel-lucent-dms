<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.alcatel_lucent.dms.model">

	<class name="Translation" table="TRANSLATION">
		<id column="ID" name="id">
			<generator class="hilo">
                <param name="table">ID_TRANSLATION</param>
                <param name="column">next_hi</param>
                <param name="max_lo">100</param>
        	</generator>
		</id>

		<property name="translation" type="string" column="TRANSLATION"
			length="1024" />
		<many-to-one name="text" column="TEXT_ID" not-null="true" />
		<many-to-one lazy="false" name="language" column="LANGUAGE_ID"
			not-null="true" />
        <property name="memo" type="string" column="MEMO"/>

	</class>

</hibernate-mapping>