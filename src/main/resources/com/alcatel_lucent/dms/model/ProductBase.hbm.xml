<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.alcatel_lucent.dms.model">

    <class name="ProductBase" table="PRODUCT_BASE">
		<id name="id" column="ID">
			<generator class="native">
                <param name="sequence">ID_PRODUCT_BASE</param>
			</generator>
		</id>

        <many-to-one name="owner" column="USER_ID" />
		<property name="name" type="string" column="NAME" not-null="true" />

	    <set name="products" inverse="true">
            <key column="PRODUCT_BASE_ID" on-delete="cascade" not-null="true"/>
            <one-to-many class="com.alcatel_lucent.dms.model.Product" />
        </set>

        <set name="applicationBases" inverse="true" order-by="name">
            <key column="PRODUCT_BASE_ID" on-delete="cascade" not-null="true" />
            <one-to-many class="com.alcatel_lucent.dms.model.ApplicationBase" />
        </set>

	</class>
</hibernate-mapping>
