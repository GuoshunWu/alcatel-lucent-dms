<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>

	<session-factory>
		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<property name="connection.url">jdbc:mysql://localhost:3306/dms</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root123</property>
		<property name="myeclipse.connection.profile">MySQL_Local</property>

		<!-- <property name="connection.url">jdbc:mysql://172.24.191.199:3306/dms</property>
		<property name="connection.username">dms</property>
		<property name="connection.password">alcatel123</property> -->

		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.pool_size">1</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.use_sql_comments">true</property>

		<!-- Drop and re-create the database schema on startup (create-drop, update, 
			create) -->

		<property name="hbm2ddl.auto">create</property>

		<mapping resource="com/alcatel_lucent/dms/model/Product.hbm.xml" />
		<mapping resource="com/alcatel_lucent/dms/model/ProductVersion.hbm.xml" />
		<mapping resource="com/alcatel_lucent/dms/model/Application.hbm.xml" />
		<mapping resource="com/alcatel_lucent/dms/model/Dictionary.hbm.xml" />
		<mapping resource="com/alcatel_lucent/dms/model/Label.hbm.xml" />
		<mapping resource="com/alcatel_lucent/dms/model/Text.hbm.xml" />
		<mapping resource="com/alcatel_lucent/dms/model/Context.hbm.xml" />
		<mapping resource="com/alcatel_lucent/dms/model/Charset.hbm.xml" />
		<mapping resource="com/alcatel_lucent/dms/model/Language.hbm.xml" />
		<mapping resource="com/alcatel_lucent/dms/model/DictionaryLanguage.hbm.xml" />
		<mapping resource="com/alcatel_lucent/dms/model/AlcatelLanguageCode.hbm.xml" />
		<mapping resource="com/alcatel_lucent/dms/model/Translation.hbm.xml" />

	</session-factory>

</hibernate-configuration>